{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist/electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./main.ts",
    "./preload.ts",
    "./handlers/**/*",
    "../backend/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}